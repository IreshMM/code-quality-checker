{
  "name": "code-quality-checker",
  "version": "1.0.0",
  "private": true,
  "description": "An application tightly integrated with GitHub, once installed on an organization it’ll listen to all push events and update commit every commit with the status ‘CODEQUALITY’ with a value of pending, success or failing",
  "author": "Iresh M Dissanayaka <socialexpz1@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/IreshMM/code-quality-checker.git",
  "homepage": "https://github.com/IreshMM/code-quality-checker",
  "bugs": "https://github.com/IreshMM/code-quality-checker/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc && npm run copy-sh",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "copy-sh": "cp src/*.sh lib/"
  },
  "dependencies": {
    "@types/express": "^4.17.4",
    "@types/node-fetch": "^2.5.6",
    "@types/rimraf": "^3.0.0",
    "express": "^4.17.1",
    "maven": "^4.7.0",
    "node-fetch": "^2.6.0",
    "probot": "^9.5.3",
    "rimraf": "^3.0.2",
    "simple-git": "^1.132.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
